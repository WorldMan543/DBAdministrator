<Page x:Class="DBAdministrator.Pages.DatabasesListPage"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		mc:Ignorable="d" 
		d:DesignHeight="300" d:DesignWidth="300"
		DataContext="{Binding RelativeSource={RelativeSource Self}}"
		Title="DatabasesListPage">
	<Grid>
		<ListView ItemsSource="{Binding Models}" Margin="15">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding DatabaseName}" />
					<GridViewColumn Header="Size" Width="50" DisplayMemberBinding="{Binding Size}" />
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Page>
