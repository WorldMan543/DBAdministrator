<Page x:Class="DBAdministrator.Pages.DatabasesListPage"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		mc:Ignorable="d" 
		d:DesignHeight="300" d:DesignWidth="300"
		DataContext="{Binding RelativeSource={RelativeSource Self}}"
		Title="DatabasesListPage">
	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal">
			<Button Content="Create" Height="25" Width="80" Margin="0 0 0 0"/>
			<Button Content="Delete" Height="25" Width="80" Margin="10 0 0 0"/>
		</StackPanel >
		<DataGrid IsReadOnly="True" ItemsSource="{Binding Models}" AutoGenerateColumns="False" Grid.Row="1">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Database Name" Binding="{Binding DatabaseName}" />
				<DataGridTextColumn Header="Size" Binding="{Binding Size}" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</Page>
