<Page x:Class="DBAdministrator.Pages.TablesListPage"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		mc:Ignorable="d" 
		d:DesignHeight="300" d:DesignWidth="300"
		Title="TablesListPage"
		DataContext="{Binding RelativeSource={RelativeSource Self}}">
	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="37*"/>
			<RowDefinition Height="233*"/>
		</Grid.RowDefinitions>
		<Button Content="Edit" Grid.Row="0" Click="EditTable_OnClick"/>
		<ListView ItemsSource="{Binding Models}" Grid.Row="1" Name="TablesList">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding TableName}" />
					<GridViewColumn Header="Owner" Width="120" DisplayMemberBinding="{Binding Owner}" />
					<GridViewColumn Header="Table Type" Width="120" DisplayMemberBinding="{Binding Type}" />
					<GridViewColumn Header="Create Date" Width="120" DisplayMemberBinding="{Binding CreateDate}" />
					<GridViewColumn Header="Row Count" Width="120" DisplayMemberBinding="{Binding RowsCount}" />
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Page>
