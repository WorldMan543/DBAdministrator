<Page x:Class="DBAdministrator.Pages.SQLEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	  Loaded="SQLEditorPage_OnLoaded"
	  DataContext="{Binding RelativeSource={RelativeSource Self}}"
	Title="SQLEditorPage">
	<DockPanel>
		<ToolBar DockPanel.Dock="Top" Height="28">
			<Button Content="Load" Click="LoadQuery_OnClick"/>
			<Separator/>
			<Button Content="Save" Click="SaveQuery_OnClick"/>
			<Separator/>
			<Button Content="Execute" Click="ExecuteQuery_OnClick"/>
		</ToolBar>
		<TabControl Name="TabControl1" Height="150" DockPanel.Dock="Bottom">
			<!--<DataGrid Name="DataGrid1" IsReadOnly="True"/>-->
		</TabControl>
		
		<avalonEdit:TextEditor DockPanel.Dock="Top"
			xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"  
			Name="Editor"
			FontFamily="Consolas"
			FontSize="10pt" 
			ShowLineNumbers="True" 
			LineNumbersForeground="#FF2B91AF"
							   Foreground="Azure"/>

	</DockPanel>
</Page>
